  "auth_schemes": {
    "none": {
      "description": "No authentication required.",
      "headers": []
    },
    "bearer": {
      "description": "HTTP Bearer token authentication.",
      "headers": ["Authorization: Bearer {token}"]
    },
    "github-app-token": {
      "description": "Short-lived GitHub App installation access token minted via JWT.",
      "headers": [
        "Authorization: Bearer {installation_access_token}",
        "X-GitHub-Api-Version: 2022-11-28"
      ],
      "token_ttl_seconds": 3600
    },
    "cloudflare-access": {
      "description": "Cloudflare Access service token for machine-to-machine requests.",
      "headers": [
        "CF-Access-Client-Id: {CF_ACCESS_CLIENT_ID}",
        "CF-Access-Client-Secret: {CF_ACCESS_CLIENT_SECRET}"
      ]
    },
    "oauth2-google": {
      "description": "Google OAuth2 service account or user credential.",
      "headers": ["Authorization: Bearer {google_access_token}"],
      "scopes_required": true
    },
    "tls-cert": {
      "description": "Mutual TLS with client certificate.",
      "headers": [],
      "notes": "Requires DOCKER_CERT_PATH, DOCKER_TLS_VERIFY environment variables."
    },
    "unix-socket": {
      "description": "Unix domain socket; no HTTP auth header needed but filesystem permissions apply.",
      "headers": []
    }
  },
  "correlation_headers": {
    "X-Infinity-Correlation-ID": "Unique request identifier for distributed tracing; propagate across all service boundaries.",
    "X-Infinity-Session-ID": "Agent session identifier; attach to all calls within a single agent execution.",
    "X-GitHub-Delivery": "GitHub-assigned delivery GUID; present on all webhook and dispatch payloads."
  },
  "audit_requirements": {
    "log_fields": ["timestamp", "endpoint_id", "method", "status_code", "correlation_id", "actor"],
    "sensitive_fields_to_mask": ["Authorization", "CF-Access-Client-Secret", "token"],
    "retention_policy": "90 days minimum; follow organisational data retention policy."
  }
